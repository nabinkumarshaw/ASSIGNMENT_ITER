#include <stdio.h>

int main() {
    // Declaring the variables
    int Ia = 345;       // Integer variable
    float Fb = 45.0;    // Float variable
    char Chvar = 'Z';   // Character variable

    // Printing their values and addresses
    printf("Variable Name\tValue\t\tAddress\n");
    printf("Ia\t\t%d\t\t%p\n", Ia, (void*)&Ia);
    printf("Fb\t\t%.2f\t\t%p\n", Fb, (void*)&Fb);
    printf("Chvar\t\t%c\t\t%p\n", Chvar, (void*)&Chvar);

    return 0;
}
