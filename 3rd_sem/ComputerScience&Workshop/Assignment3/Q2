<style>
    .box{
        height:200px;
        width:200px;
        background-color: aqua;
        color: black;
    }
    .btn{
        margin:5px;
        padding:5px;
    }
</style>
<script>
    $(document).ready(function(){
        $(".btn").click(function(){
            $(".box").hide();
        });
        $(".btn").dblclick(function(){
            $(".box").show();
        });
    })
</script>
<body>
    <div class="box">
        <p>Box1</p>
    </div>
    <button class="btn">click me!</button>
</body>
